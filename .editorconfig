# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.js]
indent_size = 2
max_line_length = 120
quote_type = single

[*.json]
indent_size = 2

[*.{html,css}]
indent_size = 2
max_line_length = 120

[Makefile]
indent_style = tab
